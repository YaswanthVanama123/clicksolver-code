<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for specific local domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>  <!-- Allow all local network -->
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">192.168.55.102</domain> <!-- Your active IP -->
        <domain includeSubdomains="true">192.168.222.1</domain>
        <domain includeSubdomains="true">192.168.184.1</domain>
    </domain-config>

    <!-- Default configuration for all other (HTTPS) connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config> 
</network-security-config>





