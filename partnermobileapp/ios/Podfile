# Define podspec sources
source 'https://cdn.cocoapods.org/'
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '16.0'

require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

# ✅ Correct react-native-permissions setup
require_relative '../node_modules/react-native-permissions/scripts/setup'

prepare_react_native_project!

use_frameworks! :linkage => :static
$RNFirebaseAsStaticFramework = true

target 'partnermobileapp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ✅ Setup permissions for react-native-permissions
  setup_permissions([
    'LocationWhenInUse',
    'LocationAlways',
    'Notifications',
    'Contacts'
  ])

  # ✅ Push Notifications
  pod 'RNCPushNotificationIOS', :path => '../node_modules/@react-native-community/push-notification-ios'

  # ✅ Background Fetch (Required for Background Geolocation)
  #    Replace TSBackgroundFetch with react-native-background-fetch:
  # pod 'react-native-background-fetch', :path => '../node_modules/react-native-background-fetch'

  # # ✅ Background Geolocation
  # pod 'react-native-background-geolocation', :path => '../node_modules/react-native-background-geolocation/ios'

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => false
    )

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Minimum iOS version
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'

        # Example of excluding arm64 for Flipper on simulator
        if target.name == 'Flipper'
          config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        end
      end
    end
  end
end
